# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Article.index
GET 	/admin						controllers.Article.admin
POST	/articles/new				controllers.Article.newarticle
GET 	/articles/editor			controllers.Article.editor
GET		/articles/:id 				controllers.Article.article(id: Int)
GET 	/articles/:id/edit  		controllers.Article.edit(id: Int)
GET 	/articles/:id/delete		controllers.Article.delete(id: Int)
POST	/articles/format			controllers.Article.format
GET		/login						controllers.Auth.loginscreen
GET		/logout						controllers.Auth.logoutscreen
POST	/auth/login					controllers.Auth.login
POST	/auth/logout				controllers.Auth.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
